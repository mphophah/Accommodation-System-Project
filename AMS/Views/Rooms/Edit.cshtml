@model AMS.Models.RoomVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Amount">Amount</label>
                    <input type="Name" asp-for="Amount" class="form-control" id="Name" placeholder="Amount">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="RoomNumber" for="RoomNumber">RoomNumber</label>
                    <input asp-for="RoomNumber" type="text" class="form-control" id="RoomNumber" placeholder="RoomNumber">
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Block" for="Block">Status</label>
                    <input asp-for="Block" type="Name" class="form-control" id="Block" placeholder="Block">
                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label asp-for="Floor" for="Floor"></label>
                    <input asp-for="Floor" type="Name" class="form-control" id="Floor" placeholder="Floor>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Status" for="Status"></label>
                    <input asp-for="Status" type="text" class="form-control" id="Status" placeholder="Status">
                </div>


                <div class="form-group col-md-6">
                    <label asp-for="Description" for="Description"></label>
                    <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Description">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="RoomType" for="RoomType"></label>
                    <input asp-for="RoomType" type="text" class="form-control" id="RoomType" placeholder="RoomType">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success " /> <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
